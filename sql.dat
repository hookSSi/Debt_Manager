DROP TABLE IF EXISTS `MoneyStatus`
-----
CREATE TABLE IF NOT EXISTS `Account`(
id INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
username VARCHAR(30) NOT NULL,
password VARCHAR(65) NOT NULL,
email VARCHAR(50),
permission VARCHAR(10) DEFAULT 'normal',
reg_date TIMESTAMP,
UNIQUE (`username`),
UNIQUE (`email`),
UNIQUE (`id`)
)
-----
CREATE TABLE IF NOT EXISTS `UserInfo`(
id INT(10) UNSIGNED,
firstname VARCHAR(30) NOT NULL,
lastname VARCHAR(30) NOT NULL,
position VARCHAR(30) DEFAULT 'user',
money INT(10) DEFAULT '0',
groupid INT(10) UNSIGNED
)
-----
CREATE TABLE IF NOT EXISTS `Group`(
groupid INT(10) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
groupName VARCHAR(60) NOT NULL,
peopleCount INT(10) UNSIGNED,
create_date TIMESTAMP,
UNIQUE(`groupid`),
UNIQUE(`groupName`)
)
-----
CREATE TABLE IF NOT EXISTS `MoneyStatus`(
status INT(1)
)
